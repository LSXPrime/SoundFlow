<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:SoundFlow.Samples.AvaloniaCrossPlatform.ViewModels"
             xmlns:converters="clr-namespace:SoundFlow.Samples.AvaloniaCrossPlatform.Converters"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="400"
             x:Class="SoundFlow.Samples.AvaloniaCrossPlatform.Views.MainView"
             x:DataType="vm:MainViewModel">
    
    <UserControl.Resources>
        <converters:BoolToPlayPauseConverter x:Key="PlayPauseLabelConverter" />
    </UserControl.Resources>
    
    <Grid RowDefinitions="Auto,*,Auto,Auto" Margin="20">
        
        <!-- Header / Menu -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10">
            <Button Content="Open File..." Click="OpenFile_Clicked" />
            <TextBlock Text="SoundFlow Player" VerticalAlignment="Center" FontWeight="Bold"/>
        </StackPanel>

        <!-- Center Display -->
        <Border Grid.Row="1" 
                Background="#202020" 
                CornerRadius="8" 
                Margin="0,20" 
                Padding="20">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="10">
                <TextBlock Text="{Binding CurrentTitle}" 
                           FontSize="18" 
                           Foreground="White"
                           HorizontalAlignment="Center" 
                           TextWrapping="Wrap"/>
                
                <TextBlock Text="{Binding TimestampText}" 
                           FontSize="14" 
                           Foreground="#AAAAAA"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Progress Bar -->
        <Slider Grid.Row="2" 
                Value="{Binding SeekProgress}" 
                Minimum="0" Maximum="1"
                Margin="0,0,0,10"/>

        <!-- Controls -->
        <Grid Grid.Row="3" ColumnDefinitions="Auto,*,Auto">
            
            <!-- Volume -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="5">
                <TextBlock Text="Vol" VerticalAlignment="Center"/>
                <Slider Value="{Binding Volume}" 
                        Minimum="0" Maximum="1" 
                        Width="100"/>
            </StackPanel>

            <!-- Playback Buttons -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20">
                <Button Command="{Binding StopCommand}" Content="â¹" Width="40"/>
                <Button Command="{Binding PlayPauseCommand}" 
                        Content="{Binding IsPlaying, Converter={StaticResource PlayPauseLabelConverter}}" 
                        Width="40" 
                        FontWeight="Bold"/>
            </StackPanel>
            
        </Grid>
    </Grid>
</UserControl>